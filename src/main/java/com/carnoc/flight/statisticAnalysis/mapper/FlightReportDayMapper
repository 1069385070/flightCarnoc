    <select id="getFlightReportDay" parameterType="Integer" resultMap="flightReportDayMapper">
        SELECT ID,DAY,FLIGHTS,NORMAL_FLIGHTS,PASSENGERS,CARGO_WEIGHT,RTYPE,ADD_TIME
        FROM F_FLIGHT_REPORT_DAY WHERE ID=#{id}
    </select>

